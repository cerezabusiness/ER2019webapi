<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Event date</th>
      <th>Evento</th>
      <th>Lugar</th>
      <th>Expositor principal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.description %></td>
        <td><%= activity.start_time.strftime('%H:%M') %></td>
        <td><%= activity.end_time.strftime('%H:%M') %></td>
        <td><%= activity.event_date.date %></td>
        <td><%= activity.places_event.event.name %></td>
        <td><%= activity.places_event.place.name %></td>
        <td><%= !activity.people.empty? ? activity.people.take.name : "no asignado" %></td>
        <td><%= link_to 'Show', [@event,activity] %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path([@event,activity]) %></td>
        <td><%= button_to 'Destroy', [@event,activity], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

