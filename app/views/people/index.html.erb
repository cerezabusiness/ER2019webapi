<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th>Description</th>
      <th>Phone</th>
      <th>Email</th>
      <th>City</th>
      <th>Company</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
    <% model= @event==nil ? person : [@event,person]  %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.picture %></td>
        <td><%= person.description %></td>
        <td><%= person.phone %></td>
        <td><%= person.email %></td>
        <td><%= person.city_id %></td>
        <td><%= person.company.name %></td>
        <td><%= person.title %></td>
        <td><%= link_to 'Show', model %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path(model) %></td>
        <td><%= button_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% path= @event == nil ? new_person_path : new_event_person_path %>
<%= link_to 'New Person', path %>
