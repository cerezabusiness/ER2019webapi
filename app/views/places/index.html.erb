<p id="notice"><%= notice %></p>
<h1>Places</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @places.each do |place| %>
      <% model= @event==nil ? place : [@event,place]  %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.address %></td>
        <td><%= place.city_id %></td>
        <td><%= link_to 'Show', model %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path(model)  %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% path= @event==nil ? new_place_path : new_event_place_path  %>
<%= link_to 'New Place', path %>

<%= render '../layout/home_link', activity: @activity %>
